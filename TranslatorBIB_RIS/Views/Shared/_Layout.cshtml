<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/popper")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    
    <!-- Nav tabs -->
    <ul class="nav nav-tabs sticky-top bg-light" role="tablist">
        <li class="nav-item">
            <a class="nav-link active  text-dark" data-toggle="tab" href="#home" role="tab">Strona główna</a>
        </li>
        <li class="nav-item">
            <a class="nav-link  text-dark" data-toggle="tab" href="#help" role="tab">Pomoc</a>
        </li>
        <li class="nav-item">
            <a class="nav-link  text-dark" data-toggle="tab" href="#angular" role="tab">Angular</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane active" id="home" role="tabpanel">@RenderBody()</div>
        <div class="tab-pane" id="help" role="tabpanel">@RenderPage("/Views/"+@Url.Action("Index", "Help") + "/Index.cshtml")</div>
        <div class="tab-pane" id="angular" role="tabpanel">@RenderPage("/Views/"+@Url.Action("Angular", "Home")+".cshtml")</div>
        </div>
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year — Michał Rembisz, Daniel Smolak</br>
                Projekt zaliczeniowy z przedmiotu Projekt Inżynierski II
            </p>
        </footer>


    
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
